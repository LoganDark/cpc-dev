{
	"compilerOptions": {
		"module": "commonjs",
		"target": "esnext",
		"lib": ["esnext"],
		"sourceMap": true,
		"strict": true,
		"types": ["typescript-to-lua/language-extensions"],
		"rootDir": "src"
	},
	"exclude": [
		"node_modules"
	],
	"tstl": {
		"luaTarget": "5.1",
		"noHeader": true,
		"luaLibImport": "require",
		"luaBundle": "build/main.lua",
		"luaBundleEntry": "src/main.ts"
	}
}
